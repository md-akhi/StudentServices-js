{
  "name": "student-services",
  "version": "1.0.0",
  "description": "Student Services",
  "main": "index.js",
  "type": "module",
  "keywords": [
    "student",
    "services"
  ],
  "authors": [
    "Mohammad Amanalikhani <md.akhi.ir@gmail.com> (http://akhi.ir)"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development run-s dev:*",
    "dev:mongod": "sh build/config/Mongod.sh",
    "dev:nodemon": "nodemon --exec npm run build:dev",
    "build:dev": "run-s webpack:dev babel:dev",
    "webpack:dev": "webpack --env NODE_ENV=dev",
    "babel:dev": "babel-node src/app.js",
    "gulp:dev": "gulp development",
    "build": "npm run prod",
    "prod": "cross-env NODE_ENV=production run-s prod:*",
    "prod:mongod": "sh build/config/Mongod.sh",
    "prod:webpack": "webpack --env NODE_ENV=prod",
    "prod:babel": "babel src -o dist",
    "prod:start": "node dist/app.js",
    "gulp:prod": "gulp production",
    "test": "mocha",
    "debug": "set DEBUG=* npm run dev --inspect",
    "watch": "run-s watch:*",
    "watch:gulp": "gulp watch",
    "watch:webpack": "webpack --watch",
    "clean": "*rimraf* dist src/public",
    "prepare": "husky install"
  },
  "directories": {
    "build": "./build",
    "config": "./config",
    "controllers": "./controllers",
    "docs": "./docs",
    "models": "./models",
    "public": "./public",
    "routes": "./routes",
    "views": "./views",
    "install": "./install",
    "test": "./test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/md-akhi/studentServices.git"
  },
  "dependencies": {
    "async": "^3.2.2",
    "axios": "^0.24.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-react-views": "^0.11.0",
    "express-session": "^1.17.2",
    "express-validator": "^6.10.0",
    "mongoose": "^5.12.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.6.3",
    "randomstring": "^1.1.5",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/node": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.16.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-file-loader": "^2.0.0",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "cssnano": "^5.0.8",
    "debug": "^4.3.2",
    "delete": "^1.1.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "file-loader": "^6.2.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.0.1",
    "mini-css-extract-plugin": "^2.4.4",
    "mocha": "^9.0.2",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.42.1",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0",
    "webpack-stream": "^6.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*": [
      "prettier --write",
      "git add"
    ]
  }
}
